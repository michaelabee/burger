<h1>Eat the Burgers</h1>

<div>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block burger=this}}
    {{/unless}}
  {{/each}}
</ul>

</div>

<div>
<img id="burger-pic" href="/img/burger.jpg">
</div>

<div id= "add-burger">
    <form>
        <input id="burger-name" type="text" name="burgerName"><br>
        <button id="burger-button" type="submit">Submit</button> <br>
            Enter a burger you would like to eat.
    </form>
</div>

